<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Surgery Drug Restriction Form View -->
    <record id="view_surgery_drug_restriction_form" model="ir.ui.view">
        <field name="name">surgery.drug.restriction.form</field>
        <field name="model">surgery.drug.restriction</field>
        <field name="arch" type="xml">
            <form string="Drug Restriction">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="category"/>
                        <field name="active"/>
                    </group>
                    <group string="Automation Instructions (Future Use)">
                        <field name="automation_data" widget="ace" options="{'mode': 'json'}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Surgery Drug Restriction Tree View -->
    <record id="view_surgery_drug_restriction_tree" model="ir.ui.view">
        <field name="name">surgery.drug.restriction.tree</field>
        <field name="model">surgery.drug.restriction</field>
        <field name="arch" type="xml">
            <list string="Drug Restrictions">
                <field name="name"/>
                <field name="category"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Surgery Drug Restriction Action -->
    <record id="action_surgery_drug_restriction" model="ir.actions.act_window">
        <field name="name">Drug Restrictions</field>
        <field name="res_model">surgery.drug.restriction</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first drug restriction
            </p>
            <p>
                Define medications that patients must stop before surgery.
            </p>
        </field>
    </record>
</odoo>
