<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sequence for Surgery Case Reference Numbers -->
    <record id="sequence_surgery_case" model="ir.sequence">
        <field name="name">Surgery Case Sequence</field>
        <field name="code">surgery.case</field>
        <field name="prefix">SUR</field>
        <field name="padding">4</field>
        <field name="number_next">1</field>
        <field name="number_increment">1</field>
    </record>

    <!-- Default Surgery Stages -->
    <record id="stage_planning" model="surgery.stage">
        <field name="name">Planning</field>
        <field name="sequence">10</field>
        <field name="fold" eval="False"/>
        <field name="description">Initial consultation and surgery planning phase</field>
    </record>

    <record id="stage_preop" model="surgery.stage">
        <field name="name">PreOp</field>
        <field name="sequence">20</field>
        <field name="fold" eval="False"/>
        <field name="description">Pre-operative preparation and clearance</field>
    </record>

    <record id="stage_postop" model="surgery.stage">
        <field name="name">PostOp</field>
        <field name="sequence">30</field>
        <field name="fold" eval="False"/>
        <field name="description">Post-operative follow-up and recovery</field>
    </record>

    <record id="stage_audit" model="surgery.stage">
        <field name="name">Audit</field>
        <field name="sequence">40</field>
        <field name="fold" eval="False"/>
        <field name="description">Final audit and case closure preparation</field>
    </record>

    <record id="stage_closed_won" model="surgery.stage">
        <field name="name">Closed-Won</field>
        <field name="sequence">50</field>
        <field name="fold" eval="True"/>
        <field name="description">Surgery completed successfully</field>
    </record>

    <record id="stage_closed_lost" model="surgery.stage">
        <field name="name">Closed-Lost</field>
        <field name="sequence">60</field>
        <field name="fold" eval="True"/>
        <field name="description">Case cancelled or patient did not proceed</field>
    </record>

    <record id="stage_deferred" model="surgery.stage">
        <field name="name">Deferred</field>
        <field name="sequence">70</field>
        <field name="fold" eval="True"/>
        <field name="description">Surgery postponed to a later date</field>
    </record>
</odoo>
